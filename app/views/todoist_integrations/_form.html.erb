<%= simple_form_for @todoist_integration do |f| %>
  <%= f.error_notification %>
  <%= f.input :token %>
  <% if @todoist_integration.persisted? %>
    <%= f.input :project_id, as: :select, collection: @projects, prompt: "Wo sollen die Aufgaben gespeichert werden?" %>
  <% else %>
    <p class="alert alert-primary">Kehre zu dieser Seite zurück, um nach der erfolgreichen Verknüpfung auszuwählen in welchem Projekt die Erinnerungen gespeichert werden sollen.</p>
  <% end %>
  <%= f.button :submit, class: "btn-primary btn-block mt-3" %>
<% end %>
