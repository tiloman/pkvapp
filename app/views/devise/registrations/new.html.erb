<header class="header-with-background">
  <div class="form_container">
    <h2><%= t('.sign_up') %></h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="col"><%= f.input :first_name, required: true, autofocus: true %></div>
        <div class="col"><%= f.input :last_name, required: true, autofocus: true %></div>
      </div>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true %>
      <%= f.input :password_confirmation, required: true %>
      <br><br>
      <%= f.button :submit, "Registrieren", class: "btn-primary btn-block" %>
    <% end %>
    <hr>

    <%= render "devise/shared/links" %>
  </div>
</header>
