<div class="form_container">

<%= simple_form_for @operation do |f| %>
<%= f.error_notification %>
<h3>Allgemeines</h3>
  <%= f.association :person, collection: current_user.people %>
  <%= f.input :title %>
  <%= f.input :value %>
  <hr>
  <h3>Daten</h3>


  <%= f.input :billing_date, as: :date %>
  <%= f.input :bill_deadline, as: :date %>

  <hr>
  <%= f.input :content, as: :rich_text_area %>
  <hr>
  <%= f.input :bill, as: :file %>
  <%= f.input :insurance_notice, as: :file %>
  <br>


  <%= f.input :insurance_payback, :as => :hidden, :input_html => { :value => 0 } %>
  <%= f.input :assistance_payback, :as => :hidden, :input_html => { :value => 0 } %>


  <%= f.button :submit, class: "btn-primary btn-block" %>
<% end %>
</div>
