<%= f.error_notification %>
<h3>Allgemeines</h3>
  <%= f.association :person, collection: current_user.people %>
  <%= f.input :title, label: 'Titel'%>
  <%= f.input :value, label: 'Summe'%>
  <hr>
  <h3>Daten</h3>


  <%= f.input :billing_date, label: 'Rechnungsdatum', as: :date %>
  <%= f.input :bill_deadline, label: 'FÃ¤lligkeitsdatum', as: :date %>

