<%= form_for_filterrific @filterrific do |f| %>
  <div class="row mb-5">
    <div class="col-8">
      <%= f.text_field(
            :search_query,
            class: 'filterrific-periodically-observed',
            placeholder: 'Suchen',
            class: 'form-control',
            autocomplete: 'off'
          ) %>
    </div>
    <div class="col-2">
      <%= f.select(:by_person, @filterrific.select_options[:by_person], { :include_blank => "- Person -" }, { :class => 'form-select' }) %>
    </div>

    <div class="col-2">
      <%= f.select(:by_state, @filterrific.select_options[:by_state], { :include_blank => "- Status -" }, { :class => 'form-select' }) %>
    </div>
    <div class="text-end">
      <%= link_to 'Filter zurÃ¼cksetzen', reset_filterrific_url, class: 'btn btn-text' %>
    </div>
  </div>
  <%= f.hidden_field :view, value: @view %>
  <% render_filterrific_spinner %>
<% end %>
